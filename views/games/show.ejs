<%- include('../partials/header.ejs', { title: game.title }) %>


    <h1><%= game.title %></h1>
    <p><strong>Platform:</strong> <%= game.platform %></p>
    <p><strong>Date:</strong> <%= game.date.toDateString() %></p>
    <p><strong>Status:</strong> <%= game.status %></p>
    <a href="/users/<%= user.id %>/games/<%= game.id %>/edit">Edit Game</a> |
    <form action="/users/<%= user.id %>/games/<%= game.id %>?_method=DELETE" method="POST">
      <button type="submit">Delete Game</button>
    </form>
        <a href="/users/<%= user.id %>/games">Back to Your Games</a>

